<%= form_for(@post) do |f| %>
<%= f.label "Post Title:" %>
<%= f.text_field :title %><br>
<%= f.label "Post Content" %>
<%= f.text_field :content %><br>
<%= f.label "Blogger" %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %> <br>
<%= f.label "Destination" %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %> <br>
<%= f.submit %>
<%end%>
