<h1>EDIT A POST</h1>
<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :blogger %>
    <%= f.collection_select :post, :blogger_id, Blogger.all, :id, :name %>
    <%= f.label :destination %>
    <%= f.collection_select :post, :destination_id, Destination.all, :id, :name %>
    <%= f.submit :submit%>
<% end %>